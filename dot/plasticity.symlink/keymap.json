{
    "body:not([gizmo]) plasticity-viewport, body[gizmo='point-picker'] plasticity-viewport": {
        'ctrl-1': 'viewport:navigate:front',
        'ctrl-3': 'viewport:navigate:right',
        'shift-f': 'viewport:toggle-edges',
        'ctrl-alt-3': 'viewport:navigate:left',
        'ctrl-alt-2': 'viewport:navigate:bottom',
        'ctrl-2': 'viewport:navigate:top',
        'ctrl-alt-1': 'viewport:navigate:back',
    },
    'body:not([gizmo])': {
        'shift-g': 'command:line',
        'shift-a': 'command:center-point-arc',
        'alt-shift-c': 'command:center-circle',
        'shift-1': 'command:imprint',
        'ctrl-f': 'command:control-point-curve',
        'ctrl-a': 'command:select-all-curves',
        'ctrl-alt-shift-c': 'command:tangent-circle',
        'alt-c': 'command:two-point-circle',
        'alt-shift-2': 'selection:convert:edge',
        'alt-shift-a': 'command:three-point-arc',
        'ctrl-shift-d': 'command:place',
        'ctrl-alt-shift-a': 'command:tangent-arc',
        'ctrl-d': 'command:delete-redundant-topology',
        'alt-shift-r': 'command:corner-rectangle',
        'shift-3': 'command:patch',
        'shift-x': 'command:rectangular-array',
        'alt-shift-x': 'command:radial-array',
    },
}